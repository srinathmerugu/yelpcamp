
<%- include("../partials/header") %>
<div class="container">
   
           <h1 class="text-center  font-weight-light font-italic">EDIT <%= campground.author.username.toUpperCase() %>'s <%=campground.name%></h1>
   <div style="width:330px; margin:0 auto">
  
    <div>
       
        <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
            <label class="mt-4 ">Campground Name</label>
            <input class="form-control mb-2"  type="text" name="name" value="<%=campground.name%>">
            <label>Cost</label>
            <input class="form-control mb-2"  type="number" name="price" value="<%=campground.price%>" min="0.01" step="0.01">
            <input class=" mb-2"  type="file" id="image" name="image" accept="image/*" required>
            <label>Description</label>
            <input class="form-control  mb-2"  type="text" name="description"  value="<%=campground.description%>"> 
            <div class="form-group">
    <label for="location">Location</label>
    <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
</div>
            <button id="button" class=" btn btn-lg btn-danger btn-block" >UPDATE</button>
                     
        </form>
</div>
           
            <a href="/campgrounds">View Campgrounds</a>
    </div>

</div>











<%- include("../partials/footer") %>